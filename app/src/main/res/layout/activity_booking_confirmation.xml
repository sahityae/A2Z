 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:background="@drawable/bg"
     android:textColor="#000000"
     tools:context="shehack.speedx.BookingConfirmation">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:src="@drawable/truck"
            android:layout_weight="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vehicleType"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Vehicle Type"
                android:textSize="15sp" />
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/vehicles"
                android:layout_height="50dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tInvoice"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:text="Invoice No."
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fInvoice"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="Please Attach"
                android:textSize="15sp" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/invoice"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:onClick="browseInvoice"
                android:text="Browse"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tGst"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:text="GST E-Way bill UID"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fGst"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="Please Attach"
                android:textSize="15sp" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/gst"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:onClick="browseGst"
                android:text="Browse"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tInsurance"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:text="Insurance Booking"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fInsurance"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="Please Attach"
                android:textSize="15sp" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/insurance"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:onClick="browseGst"
                android:text="Browse"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shipmentDetails"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="4"
                android:text="     Shipment Details    "
                android:textSize="15sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:background="#0a8c90" />

            <TextView
                android:id="@+id/fareDetails"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="4"
                android:text="           Estimated Fare    "
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/confirmBooking"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="confirmBooking"
            android:text="CONFIRM BOOKING"
            android:textSize="20sp"/>

    </LinearLayout>
